<?xml version="1.0"?>
<config>
    <modules>
        <Likipe_Demo>
            <version>0.1.0</version>
        </Likipe_Demo>
    </modules>
    <frontend>
        <routers>
            <demo>
                <use>standard</use>
                <args>
                    <module>Likipe_Demo</module>
                    <frontName>demo</frontName>
                </args>
            </demo>
        </routers>
        <layout>
            <updates>
                <demo>
                    <file>demo.xml</file>
                </demo>
            </updates>
        </layout>
    </frontend>
    <admin>
<!--        <routers>
            <demo>
                <use>admin</use>
                <args>
                    <module>Likipe_Demo</module>
                    <frontName>demo</frontName>
                </args>
            </demo>
        </routers>-->
        <routers>
            <!-- Includes our controller, so when we add the adminhtml menu item below, it is found! -->
            <adminhtml>
                 <args>
                     <modules>
                         <demo before="Mage_Adminhtml">Likipe_Demo_Adminhtml</demo>
                     </modules>
                 </args>
             </adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <demo>
                <class>Likipe_Demo_Model</class>
                <resourceModel>demo_mysql4</resourceModel>
            </demo>
            <demo_mysql4>
                <class>Likipe_Demo_Model_Mysql4</class>
                <entities>
                    <demo>
                        <table>demo</table>
                    </demo>
                </entities>
            </demo_mysql4>
        </models>
        <resources>
            <demo_setup>
                <setup>
                    <module>Likipe_Demo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </demo_setup>
            <demo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </demo_write>
            <demo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </demo_read>
        </resources>
        <blocks>
            <demo>
                <class>Likipe_Demo_Block</class>
            </demo>
        </blocks>
        <helpers>
            <demo>
                <class>Likipe_Demo_Helper</class>
            </demo>
        </helpers>
    </global>
</config>